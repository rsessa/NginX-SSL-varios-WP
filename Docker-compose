version: '3' 

services:

  nginx-proxy:
    container_name: nginx-proxy
    image: jwilder/nginx-proxy
    restart: always
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock:ro
      - certs:/etc/nginx/certs:ro
      - confd:/etc/nginx/conf.d
      - vhostd:/etc/nginx/vhost.d
      - html:/usr/share/nginx/html
    labels:
      - com.github.jrcs.letsencrypt_nginx_proxy_companion.nginx_proxy


  letsencrypt:
    container_name: letsencrypt
    image: jrcs/letsencrypt-nginx-proxy-companion
    restart: always
    environment:
      - NGINX_PROXY_CONTAINER=nginx-proxy
      - DEFAULT_EMAIL=TÃš EMAIL
    volumes:
      - certs:/etc/nginx/certs:rw
      - confd:/etc/nginx/conf.d
      - vhostd:/etc/nginx/vhost.d
      - html:/usr/share/nginx/html
      - /var/run/docker.sock:/var/run/docker.sock:ro
      
  wordpress:
    depends_on:
      - db
    image: wordpress:latest
    container_name: blog
    expose:
      - "80"
    restart: always
    volumes:
      - ./wordpress:/var/www/html
    environment:
      WORDPRESS_DB_HOST: db
      WORDPRESS_DB_USER: exampleuser
      WORDPRESS_DB_PASSWORD: examplepass
      WORDPRESS_DB_NAME: exampledb
      WORDPRESS_DB_HOST: db:3306
      VIRTUAL_HOST: DOMINIO O SUBDOMINIO REAL
      LETSENCRYPT_HOST: DOMINIO O SUBDOMINIO REAL(el mismo de arriba)
      LETSENCRYPT_EMAIL: TU EMAIL
      
  db:
    image: mysql:5.7
    container_name: db-wordpress
    volumes:
      - ./db:/var/lib/mysql
    restart: always
    env_file: .db.env
    environment:
      MYSQL_DATABASE: exampledb
      MYSQL_USER: exampleuser
      MYSQL_PASSWORD: examplepass
      MYSQL_RANDOM_ROOT_PASSWORD: '1'
      NETWORK_ACCESS: internal
    
  wordpress2:
    depends_on:
      - db2
    image: wordpress:latest
    container_name: blog2
    expose:
      - "80"
    restart: always
    volumes:
      - ./wordpress2:/var/www/html
    environment:
      WORDPRESS_DB_HOST: db2
      WORDPRESS_DB_USER: exampleuser
      WORDPRESS_DB_PASSWORD: examplepass
      WORDPRESS_DB_NAME: exampledb
      WORDPRESS_DB_HOST: db:3306
      VIRTUAL_HOST: DOMINIO O SUBDOMINIO REAL
      LETSENCRYPT_HOST: DOMINIO O SUBDOMINIO REAL(el mismo de arriba)
      LETSENCRYPT_EMAIL: TU EMAIL
      
  db2:
    image: mysql:5.7
    container_name: db2-wordpress2
    volumes:
      - ./db2:/var/lib/mysql
    restart: always
    env_file: .db2.env
    environment:
      MYSQL_DATABASE: exampledb
      MYSQL_USER: exampleuser
      MYSQL_PASSWORD: examplepass
      MYSQL_RANDOM_ROOT_PASSWORD: '1'
      NETWORK_ACCESS: internal  
    
  wordpress3:
    depends_on:
      - db3
    image: wordpress:latest
    container_name: blog3
    expose:
      - "80"
    restart: always
    volumes:
      - ./wordpress3:/var/www/html
    environment:
      WORDPRESS_DB_HOST: db3
      WORDPRESS_DB_USER: exampleuser
      WORDPRESS_DB_PASSWORD: examplepass
      WORDPRESS_DB_NAME: exampledb
      WORDPRESS_DB_HOST: db:3306
      VIRTUAL_HOST: DOMINIO O SUBDOMINIO REAL
      LETSENCRYPT_HOST: DOMINIO O SUBDOMINIO REAL(el mismo de arriba)
      LETSENCRYPT_EMAIL: TU EMAIL
      
  db3:
    image: mysql:5.7
    container_name: db3-wordpress3
    volumes:
      - ./db3:/var/lib/mysql
    restart: always
    env_file: .db3.env
    environment:
      MYSQL_DATABASE: exampledb
      MYSQL_USER: exampleuser
      MYSQL_PASSWORD: examplepass
      MYSQL_RANDOM_ROOT_PASSWORD: '1'
      NETWORK_ACCESS: internal      
    
    
